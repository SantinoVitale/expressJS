<div>
  {{#if h1title}}
  <h1 style="text-align: center;">{{h1title}}</h1>
  {{else}}
  <h1>UNKOWN TITLE</h1>
  {{/if}}
  {{#each products}}
  <form action="/ejemplo/products/{{this._id}}" method="post">
    <p>nombre: {{this.title}}</p>
    <p>id: {{this._id}}</p>
    <p>precio: ${{this.price}}</p>
    <input type="submit" value="Agregar producto al carrito">
  </form>
  <hr/>
    
  {{/each}}
  
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/vista.products.js"></script>